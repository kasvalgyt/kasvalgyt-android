<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="item" type="lt.blackbrackets.kasvalgyt.api.models.EatingPlace"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0600BCD4"
        android:clipToPadding="false"
        android:padding="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:background="#fefefe"
            android:elevation="1dp">

            <ImageView
                android:layout_width="36dp"
                tools:src="@color/colorAccent"
                app:imageUrl="@{item.pagePicture}"
                android:padding="2dp"
                android:background="#fff"
                android:elevation="1dp"
                android:id="@+id/imageView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_height="36dp" />

            <TextView
                tools:text="Hop Doc"
                android:text="@{item.pageName}"
                android:font='@{"Roboto-Medium"}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pageNameTx"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                android:layout_marginStart="22dp"
                app:layout_constraintLeft_toRightOf="@+id/imageView"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="8dp" />

            <TextView
                tools:text="TexTeTextViewxtViewtView"
                android:text="@{item.message}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/messageTx"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                android:layout_marginTop="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@+id/messageTx"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:clipToPadding="false"
                android:padding="16dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@mipmap/blynas_blet"
                    app:imageUrl="@{item.mealImage}"
                    android:id="@+id/imageView2"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:background="#fff"
                    android:elevation="1dp" />

            </RelativeLayout>

            <Button
                android:text="Daugiau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openButton"
                app:layout_constraintLeft_toLeftOf="@+id/messageTx"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginTop="8dp" />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</layout>